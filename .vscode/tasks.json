{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/example/src/driver_main.cpp",
                "${workspaceFolder}/example/src/serial_comm.cpp",
                "${workspaceFolder}/example/src/data_receiver.cpp",
                "${workspaceFolder}/example/src/data_sender.cpp",
                "-o",
                "${workspaceFolder}/example/bin/CppDriver",
                "-lboost_system",
                "-pthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Marked as default build task
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "compiler: /usr/lib/ccache/g++"
        },
        {
            "label": "Run Cpp Driver Project",
            "type": "shell",
            "command": "${workspaceFolder}/example/bin/CppDriver",
            "group": "test",
            "problemMatcher": []
        }
    ]
}