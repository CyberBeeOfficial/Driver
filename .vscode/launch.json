{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Cpp Driver Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/example/bin/CppDriver",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}